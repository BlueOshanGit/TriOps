      "actionCardContent": "Date & Time: {{operation}}"
    }
  },
  "inputFields": [
    {
      "typeDefinition": {
        "name": "operation",
        "type": "enumeration",
        "fieldType": "select",
        "options": [
          { "value": "date_format", "label": "Format Date" },
          { "value": "date_add", "label": "Add Days" },
          { "value": "date_subtract", "label": "Subtract Days" },
          { "value": "date_diff", "label": "Days Between Dates" },
          { "value": "now", "label": "Current Date/Time" }
        ]
      },
      "supportedValueTypes": ["STATIC_VALUE"],
      "isRequired": true,
      "labels": {
        "en": {
          "label": "Operation",
          "description": "The date/time operation to perform"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "input1",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["OBJECT_PROPERTY"],
      "isRequired": false,
      "labels": {
        "en": {
          "label": "Date",
          "description": "The date value (not required for Current Date/Time)"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "input2",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["OBJECT_PROPERTY"],
      "isRequired": false,
      "labels": {
        "en": {
          "label": "Days / Second Date",
          "description": "Number of days to add/subtract, or second date for Days Between"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "formatOptions",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["STATIC_VALUE"],
      "isRequired": false,
      "labels": {
        "en": {
          "label": "Date Format",
          "description": "Output format pattern (e.g. YYYY-MM-DD, MM/DD/YYYY, DD MMM YYYY)"
        }
      }
    }
  ],
  "outputFields": [
    {
      "typeDefinition": {
        "name": "hubhacks_success",
        "type": "bool"
      },
      "labels": {
        "en": {
