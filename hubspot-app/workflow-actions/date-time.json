    {
      "typeDefinition": {
        "name": "hubhacks_error",
        "type": "string"
      },
      "labels": {
        "en": {
          "label": "Error Message"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "result",
        "type": "string"
      },
      "labels": {
        "en": {
          "label": "Formatted Result"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "result_number",
        "type": "number"
      },
      "labels": {
        "en": {
          "label": "Result (Number)"
        }
      }
    }
  ],
  "objectTypes": ["CONTACT", "COMPANY", "DEAL", "TICKET"],
  "executionRules": [
    {
      "labelName": "Continue on success",
      "conditions": {
        "hubhacks_success": true
      }
    },
    {
      "labelName": "Handle error",
      "conditions": {
        "hubhacks_success": false
      }
    }
  ]
