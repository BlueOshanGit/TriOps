{
  "actionType": "WEBHOOK",
  "actionUrl": "https://reena-noncorroborating-readily.ngrok-free.dev/v1/actions/format",
  "published": true,
  "labels": {
    "en": {
      "actionName": "Transform Text",
      "actionDescription": "Concatenate, extract substring, find & replace, or split text",
      "actionCardContent": "Transform Text: {{operation}}"
    }
  },
  "inputFields": [
    {
      "typeDefinition": {
        "name": "operation",
        "type": "enumeration",
        "fieldType": "select",
        "options": [
          { "value": "concat", "label": "Concatenate" },
          { "value": "substring", "label": "Extract Substring" },
          { "value": "replace", "label": "Find & Replace" },
          { "value": "split", "label": "Split by Delimiter" }
        ]
      },
      "supportedValueTypes": ["STATIC_VALUE"],
      "isRequired": true,
      "labels": {
        "en": {
          "label": "Operation",
          "description": "The text transformation to perform"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "input1",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["OBJECT_PROPERTY"],
      "isRequired": true,
      "labels": {
        "en": {
          "label": "Text",
          "description": "The primary text value (or first value for concatenation)"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "input2",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["OBJECT_PROPERTY"],
      "isRequired": false,
      "labels": {
        "en": {
          "label": "Second Value",
          "description": "Second text for concat, start index for substring, search string for replace, delimiter for split"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "input3",
        "type": "string",
        "fieldType": "text"
      },
      "supportedValueTypes": ["OBJECT_PROPERTY"],
      "isRequired": false,
      "labels": {
        "en": {
          "label": "Third Value",
          "description": "Third text for concat, end index for substring, replacement string for replace"
        }
      }
    }
  ],
  "outputFields": [
    {
      "typeDefinition": {
        "name": "hubhacks_success",
        "type": "bool"
      },
      "labels": {
        "en": {
          "label": "Success"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "hubhacks_error",
        "type": "string"
      },
      "labels": {
        "en": {
          "label": "Error Message"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "result",
        "type": "string"
      },
      "labels": {
        "en": {
          "label": "Formatted Result"
        }
      }
    },
    {
      "typeDefinition": {
        "name": "result_number",
        "type": "number"
      },
      "labels": {
        "en": {
          "label": "Result (Number)"
        }
      }
    }
  ],
  "objectTypes": ["CONTACT", "COMPANY", "DEAL", "TICKET"],
  "executionRules": [
    {
      "labelName": "Continue on success",
      "conditions": {
        "hubhacks_success": true
      }
    },
    {
      "labelName": "Handle error",
      "conditions": {
        "hubhacks_success": false
      }
    }
  ]
}
